@charset "utf-8";
.rl_menu{
	/*-moz-user-select:-moz-none ;for ff, only inputs selectable*/
	cursor:default;
}
.rl_menuitem button{
	overflow:hidden;
	white-space: nowrap;
    text-overflow:ellipsis;
}
.rl_menu .rl_btn_disabled .rl_btn_left,
.rl_menu .rl_btn_disabled .rl_btn_center,
.rl_menu .rl_btn_disabled .rl_btn_right{
    background:none;
}
/*
popup menu
*/
.rl_popupmenu{
	position:absolute;
	left:0;
	top:0;
	z-index:100;
	width:250px;
	padding-right:2px !important;
	padding-right:0;
	border:1px solid #A6C2E6;
	background:#F1F8FC url(../image/default/menu/popup_bg.gif) repeat-y;
	/*filter:		progid:DXImageTransform.Microsoft.Shadow(color="#CACACA", Direction=135, Strength=3);*/
	
}
.rl_popupmenu .split{
	margin:3px 0 3px 25px;
	height:2px;
	font-size:2px;
	background:url(../image/default/menu/popup_split.gif) repeat-x;
}
.rl_popupmenu button{
	text-align:left;
}
.rl_popupmenu .rl_btn .split_arrow{
	background-image:url(../image/default/button/arrow_right.gif);
	background-position:0 6px !important;
}
.rl_popupmenu .rl_popup_wrap{
	position:relative;
	left:0;
	top:0;
	width:100%;
	height:100%;
}

/*
standard menu
*/
.rl_standardmenu .rl_btn{
	float:left;
}
/*
toolbar
*/
.rl_toolbar{
	padding-top:2px;
	padding-bottom:2px;
}
/*.rl_toolbar li{
	float:left;
}*/
.rl_toolbar .rl_btn, .rl_toolbar .rl_input, .rl_toolbar .rl_label{
	float:left;
}
.rl_toolbar .split{
	margin-left:6px;
	margin-top:2px;
	height:20px;
	font-size:2px;
	float:left;
	width:5px;
	background:url(../image/default/menu/toolbar_split.gif) repeat-y ;
}
.rl_toolbar .blank{
	height:20px;
	font-size:2px;
	float:left;
	width:30px;
}
.rl_toolbar .rl_alignright{
	float:right;
}
