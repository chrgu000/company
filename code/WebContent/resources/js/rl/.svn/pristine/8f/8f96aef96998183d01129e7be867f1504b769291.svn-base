@charset "utf-8";
.rl_list{
    -moz-user-select:none ;/*for ff*/
	border:solid 1px #A6C2E6;
	background:#fff;
	width:200px;
	cursor:default;
	overflow:hidden;
	/*height:100px;*/
}
.rl_list .rl_items_scroll_ctrl{
	/*width:200px;
	height:100px;*/
	overflow:auto;
}
.rl_list .rl_items_ctn{
	list-style:none;
	/*width:182px;*/
}
.rl_list .rl_all_selector{
	background-color:#f4f4f4;
	border-top:solid 1px #eee;
	border-bottom:solid 1px #eee;
	list-style:none;
	height:25px;
	line-height:25px;
}
.rl_list .rl_all_selector li{
	height:25px;
	line-height:25px;
}
.rl_list .rl_all_selector .rl_li_selector{
	vertical-align:middle !important;
	vertical-align:baseline;
}
.rl_list li{
	height:21px;
	line-height:21px;
	width:100%;
	white-space:nowrap;
	text-overflow:ellipsis;
	overflow:hidden;
}
.rl_list li.rl_item_over{
    background:#f4f4f4 url(../image/default/list/item_over.gif);
}
.rl_list li.rl_item_selected{
    background-color:#C1DBFC;
}
.rl_list li *{
	vertical-align:middle;
}
.rl_list li input.rl_li_selector{
	margin-top:0 !important;
	margin-top:3px;/*fix middle diff for ie6 */
	margin-left:3px;
	width:16px;
	height:16px;
	overflow:hidden;
}
.rl_list li img.rl_li_icon{
	margin-top:0 !important;
	margin-top:2px;/*fix middle diff ie6*/
	margin-left:3px;
	width:16px;
	height:16px;
}
.rl_list li span.rl_li_text{
	margin-left:5px;
}
