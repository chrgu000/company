@charset "utf-8";
/**
 * @fileOverview style for integraded view page which is like a channel page of system.
 * @version 1.0.0
 * @change
    #1-A @2012/8/21 Creates file.
    #2-M by prcjack @2012/9/3 Modify rl_databox_elements_group_icon and rl_databox_elements_group_icon_selected.
*/
/*
rl.provided("x:mti.css.iview");
*/

.rlx_mti_iview .title_cols{
	width:100%;
	height:40px;
}
.rlx_mti_iview .title_col{
	border-right:solid 1px #ccc;
	padding-right:25px;
	width:80px;
}
.rlx_mti_iview .title_col .title{
	white-space:nowrap;
}
.rlx_mti_iview .title_col .title img{
	border:0 none;
}
/**
 * title_col_nosplit : title is not split with following content.
 */
.rlx_mti_iview .title_col_nosplit{
	border-right:none;
}
.rlx_mti_iview .title_sep_line{
	height:15px;
	overflow:hidden;
	font-size:1px;
	border-bottom:solid 1px #ccc;
}
.rlx_mti_iview .page_menu_ctn{
	padding-left:25px;
}
.rlx_mti_iview .page_menu{
	list-style:none;
	display:block;
}
.rlx_mti_iview .page_menu li{
	float:left;
}
.rlx_mti_iview .page_menu li a{
	display:block;
	padding:5px 2em;
	color:black;
}
.rlx_mti_iview .page_menu li a:hover{
	background-color:#eee;
}
.rlx_mti_iview .page_menu li.first a{
	padding:5px 2em 5px 0;
}
.rlx_mti_iview .page_menu li.active a{
	background-color:#333;
	padding:5px 2em;
	color:white;
}
/**
 * top_cols_2 : cols table which always layouted at top of iview, formed of 2 cols.
 */
.rlx_mti_iview .top_cols_2{
	margin-top:16px;
	width:100%;
}
.rlx_mti_iview .top_cols_2 .auto_col{
	padding-right:16px;
}
.rlx_mti_iview .top_cols_2 .fixed_col{
	width:48%;
}
.rlx_mti_iview .top_cols_2 .content_fixed_height .comp_ctn{
	height:250px;
	border:solid 1px #d7d7d7;
}
.rlx_mti_iview .top_cols_2 .content_autoscroll .comp_ctn{
	overflow:auto;
}

/**
 * 
 */

.rlx_mti_iview .page_main{
	margin-top:2em;
}
.rlx_mti_iview .l_cols{
	width:100%;
	table-layout:fixed;
}
.rlx_mti_iview .rlx_mti_l_main{
	padding-right:20px;
	vertical-align:top;
}
.rlx_mti_iview .rlx_mti_l_side{
	width:320px;
	vertical-align:top;
	border-left:solid 1px #ccc;
}
.rlx_mti_iview .rlx_mti_l_side .side_inner_wrapper{
	padding-left:20px;
}
.rlx_mti_iview .rlx_mti_l_side .group .g_head{
	height:20px;
	line-height:20px;
	padding:5px;
	font-weight:bold;
	background-color:#f6f6f6;
	border-bottom:solid 1px #d7d7d7;
}
.rlx_mti_iview .rlx_mti_l_side .group .g_body{
	margin-top: .5em;
	padding-left:0;
}
.rlx_mti_iview .rlx_mti_l_side .group .g_body_indent{
	padding:0 .5em;
}
.rlx_mti_iview .rlx_mti_l_main .group .g_body{
	padding-left:0;
}

/**
 * rlx_mti_category_detail_panel : category detail panel.
 */
.rlx_mti_category_detail_panel{
	border:solid 1px #E4E4E4;
}
.rlx_mti_category_detail_panel .category_nav{
	/*height:80px;*/
	padding:0 1em;
	background-color:#f6f6f6;
	border-bottom:solid 1px #E4E4E4;
}
.rlx_mti_category_detail_panel .category_nav .rl_databox_elements_group_icon{
	margin-top:5px;
	width:120px;
	border:none;
	background:none;
}
.rlx_mti_category_detail_panel .category_nav .rl_databox_elements_group_icon_selected{
	border:1px solid #7DA2CE;
	background-color:#EEF5FD;
}
.rlx_mti_category_detail_panel .category_detail{
	margin-top:1px;
	padding:1em;
	background:url(../image/default/mix/iview/gray_gradient.gif) top repeat-x;
}
/* override defaults */
.rlx_mti_category_detail_panel .category_detail .group{
	margin-top:0;
}
.rlx_mti_category_detail_panel .category_detail .group .g_bar{
	background:none;
	border-bottom:solid 1px #f2f2f2;
}

/**
 * rlx_mti_summary_panel: a panel with summary in panel header.
 */
.rlx_mti_summary_panel{
	border:solid 1px #d7d7d7;
}
.rlx_mti_summary_panel .sp_header{
	border-bottom:solid 1px #d7d7d7;
	background-color:#f6f6f6;
	padding:1em;
}
.rlx_mti_summary_panel .sp_icon_col{
	border-right:solid 1px #ccc;
	padding-right:25px;
	width:80px;
}
.rlx_mti_summary_panel .sp_icon_col .icon_ctn{
	white-space:nowrap;
}
.rlx_mti_summary_panel .icon_ctn img{
	border:0 none;
}
.rlx_mti_summary_panel .sp_summary_col{
	padding-left:20px;
}
.rlx_mti_summary_panel .sp_body{
	padding:0 1em 1em 1em;
}

/**
 * rlx_mti_actions_panel: action buttons(links) group, with shortcuts in panel header.
 */
.rlx_mti_actions_panel .ap_header{
	border-bottom:solid 1px #d7d7d7;
	background-color:#f6f6f6;
	padding:1em 1em 5px 1em;
}
.rlx_mti_actions_panel{
	margin-bottom:1em;
}
.rlx_mti_actions_panel .ap_title_col{
	border-right:solid 1px #ccc;
	padding-right:25px;
	width:80px;
}
.rlx_mti_actions_panel .ap_title_col .title{
	white-space:nowrap;
}
.rlx_mti_actions_panel .ap_title_col .title img{
	border:0 none;
}
.rlx_mti_actions_panel .ap_shotcuts_col{
	padding-left:20px;
}
.rlx_mti_actions_panel .ap_shotcuts_col  .shortcuts_links li{
	float:left;
}
.rlx_mti_actions_panel .shortcuts_links{
	list-style:none;
}
.rlx_mti_actions_panel .shortcuts_links li{
	margin-right:2em;
	padding:5px 0;
}
.rlx_mti_actions_panel .ap_body{
	padding:1em;
}
.rlx_mti_actions_panel .ap_body .group{
	margin-top:1em;
}
.rlx_mti_actions_panel .actions_cols{
	width:100%;
	table-layout:fixed;
}
.rlx_mti_actions_panel .actions_cols .actions_title{
	text-align:left;
	font-weight:normal;
	height:25px;
}
.rlx_mti_actions_panel .actions_cols .actions_col{
	width:25%;
	vertical-align:top;
}

/**
 * rlx_mti_help_panel: help panel.
 */
.rlx_mti_help_panel{
}
.rlx_mti_help_panel .hp_section{
	margin-bottom:.5em;
}
.rlx_mti_help_panel .hp_section .title{
	padding:2px 0;
	/*font-weight:bold;*/
	color:green;
}

/**
 *rlx_mti_action_bar: form actions bar.
 */
.rlx_mti_action_bar{
	margin-top:24px;
	padding-top:24px;
	text-align:center;
	border-top:1px solid #CCC;
}
.rlx_mti_action_bar button{
	line-height:25px;
	margin:0 1em;
}
.rlx_mti_action_bar button.primary_btn{
	padding:0 1em;
}
