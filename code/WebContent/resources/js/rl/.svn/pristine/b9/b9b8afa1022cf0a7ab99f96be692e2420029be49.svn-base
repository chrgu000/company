/**
 * rlx_mti_list_query_form : list page query form.
 */
.rlx_mti_list_query_form{
	width:500px;
	padding:2em;
	display:none;
	border-top:solid 1px #ddd;
}
.rlx_mti_list_query_form .t{
	width:150px;
	height:20px;
}
.rlx_mti_list_query_form .s{
	width:153px;
	height:20px;
}
.rlx_mti_list_query_form table.fields_layout{
	width:100%;
	line-height:25px;
}
.rlx_mti_list_query_form table.fields_layout th{
	font-weight:lighter;
	text-align:right;
	padding-right:5px;
}
